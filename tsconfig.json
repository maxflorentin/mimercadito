{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": [
      "ES2019"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "./build",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "preview"
  ]
}